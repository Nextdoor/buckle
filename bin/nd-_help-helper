#!/usr/bin/env bash

# Print help message for this tool
if [[ "$1" = "--help" ]]; then
    cat << 'EOF'
usage: nd-_help-helper [text] ...

Bash helper for creating program descriptions that can be included by nd help.

Insert $(nd _help-helper "<your help text>") at the top of a bash script to add a description that
shows up when running 'nd help'.

Example usage:

#!/usr/bin/env bash
eval "$(nd _help-helper "Prints the time")"
date
EOF

    exit 0
fi

cat <<- EOF
	# Print help message consisting arguments passed to the original program
	if [[ "\$1" = "--help" ]]; then
		echo "${@}"
		exit 0
	fi
EOF
