#!/usr/bin/env python

import argparse
import os
import subprocess
import sys

parser = argparse.ArgumentParser()
parser.add_argument('app_name', type=str, help='The desired app to run via the nd_toolbelt app!')
args = parser.parse_args()

app_name = 'nd-' + args.app_name

try:
    app_path = subprocess.check_output(['which', app_name]).strip()
except subprocess.CalledProcessError:
    sys.exit('ERROR: executable "%s" not found' % app_name)

os.execv(app_path, [app_name])

